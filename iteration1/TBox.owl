<?xml version="1.0"?>
<rdf:RDF xmlns="https://github.com/matteo-guenci/MiTO/blob/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#"
     xml:base="https://github.com/matteo-guenci/MiTO/blob/main/MiTO%20Ontology/MiTO_Samod_it_1.owl"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:mito="https://github.com/matteo-guenci/MiTO/blob/main/MiTO%20Ontology/MiTO_Samod_it_1.owl/"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#">
    <owl:Ontology rdf:about="https://github.com/matteo-guenci/MiTO/blob/main/MiTO%20Ontology/MiTO_Samod_it_1.owl"/>
<!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Object Properties
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentionType -->

    <owl:ObjectProperty rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentionType">
        <rdfs:domain rdf:resource="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Mention"/>
        <rdfs:range rdf:resource="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#MentionType"/>
        <rdfs:comment xml:lang="en">A data property that aims to define the implicit or explicit character of the mention it is describing</rdfs:comment>
    </owl:ObjectProperty>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentionedEntity -->

    <owl:ObjectProperty rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentionedEntity">
        <rdfs:domain rdf:resource="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Mention"/>
        <rdfs:range>
            <owl:Class>
                <owl:unionOf rdf:parseType="Collection">
                    <rdf:Description rdf:about="http://purl.org/vocab/frbr/core#Person"/>
                    <rdf:Description rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Thing"/>
                </owl:unionOf>
            </owl:Class>
        </rdfs:range>
        <rdfs:comment xml:lang="en">A property that relates the mention to the mentioned entity.</rdfs:comment>
    </owl:ObjectProperty>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentioningEntity -->

    <owl:ObjectProperty rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#hasMentioningEntity">
        <rdfs:domain rdf:resource="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Mention"/>
        <rdfs:range rdf:resource="http://purl.org/spar/fabio/Article"/>
        <rdfs:comment xml:lang="en">A property that relates the mention to the mentioning entity.</rdfs:comment>
    </owl:ObjectProperty>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#mentions -->

    <owl:ObjectProperty rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#mentions">
        <rdfs:comment xml:lang="en">The mentioning entity mentions the mentioned entity, either directly and explicitly (when the mention is clearly stated: &quot;... those reasons brought me to think that the best soulution could be the application of SoftwareX ...&quot;), indirectly (e.g.  when a publication mentions a method or algorithm without explicitly naming the software that implements it), or implicitly (e.g.when a publication uses certain terminology or conventions that are specific to a software without directly mentioning the software).</rdfs:comment>
    </owl:ObjectProperty>
    


    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Classes
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    


    <!-- http://purl.org/spar/fabio/Article -->

    <owl:Class rdf:about="http://purl.org/spar/fabio/Article">
        <rdfs:comment xml:lang="en">The realization of a piece of writing on a particular topic, usually published within a periodical publication (e.g. journal, magazine and newspaper).</rdfs:comment>
    </owl:Class>
    


    <!-- http://purl.org/vocab/frbr/core#Person -->

    <owl:Class rdf:about="http://purl.org/vocab/frbr/core#Person">
        <rdfs:comment xml:lang="en">An individual. The entity defined as person encompasses individuals that are deceased as well as those that are living.</rdfs:comment>
    </owl:Class>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Mention -->

    <owl:Class rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Mention">
        <rdfs:comment xml:lang="en">Originally: the action of calling to mind or commemorating something in speech or writing. Subsequently in more restricted sense: the action or an act of referring to, remarking upon, or introducing the name of a person or thing in spoken or written discourse, often incidentally and as not necessarily essential to the discussion.
Stated by https://www.oed.com/dictionary/mention_n?tl=true</rdfs:comment>
    </owl:Class>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#MentionType -->

    <owl:Class rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#MentionType">
        <rdfs:comment xml:lang="en">The aim of this class is to reify the implicit or explicit characteristic of a mention.</rdfs:comment>
    </owl:Class>
    


    <!-- https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Thing -->

    <owl:Class rdf:about="https://raw.githubusercontent.com/matteo-guenci/MiTO/main/MiTO%20Ontology/MiTO_Samod_it_1.owl#Thing">
        <rdfs:comment xml:lang="en">This class identify simply everything that could be mentioned that is not a Person (e.g. Softwares, Datasets, Workflows, Methodologies...)</rdfs:comment>
    </owl:Class>
</rdf:RDF>
